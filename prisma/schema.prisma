generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum RoleScope {
  GLOBAL
  COMPANY
}

enum UserStatus {
  ACTIVE
  INACTIVE
  BLOCKED
}

enum CompanyStatus {
  ACTIVE
  INACTIVE
}

model User {
  id           Int         @id @default(autoincrement())
  email        String      @unique
  phone        String
  passwordHash String      @map("password_hash")
  nombre       String
  status       UserStatus  @default(ACTIVE)

  // quién creó este usuario
  createdByUserId Int?     @map("created_by_user_id")
  createdBy       User?    @relation("UserCreator", fields: [createdByUserId], references: [id], onDelete: SetNull)
  createdUsers    User[]   @relation("UserCreator")

  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt      @map("updated_at")

  globalRoles UserRole[]
  companies   Company[]    @relation("CompanyOwner")
  memberships CompanyUser[]

  @@map("users")
}

model Role {
  id          Int       @id @default(autoincrement())
  name        String    @unique // SUPERADMIN, ADMIN, EMPLOYEE
  scope       RoleScope
  description String?

  globalUsers  UserRole[]
  companyUsers CompanyUser[]

  @@map("roles")
}

model UserRole {
  userId Int
  roleId Int

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
  role Role @relation(fields: [roleId], references: [id], onDelete: Cascade)

  @@id([userId, roleId])
  @@map("user_roles")
}

model Company {
  id          Int          @id @default(autoincrement())
  ownerUserId Int          @map("owner_user_id")
  name        String
  phone       String
  status      CompanyStatus @default(ACTIVE)

  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt      @map("updated_at")

  owner User @relation("CompanyOwner", fields: [ownerUserId], references: [id], onDelete: Restrict)
  users CompanyUser[]

  @@map("companies")
}

model CompanyUser {
  id        Int      @id @default(autoincrement())
  companyId Int      @map("company_id")
  userId    Int      @map("user_id")
  roleId    Int      @map("role_id")
  status    String   @default("ACTIVE")

  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt      @map("updated_at")

  company Company @relation(fields: [companyId], references: [id], onDelete: Cascade)
  user    User    @relation(fields: [userId], references: [id], onDelete: Cascade)
  role    Role    @relation(fields: [roleId], references: [id], onDelete: Restrict)

  @@unique([companyId, userId])
  @@map("company_users")
}
